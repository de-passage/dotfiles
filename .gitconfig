[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  line-numbers= true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
[alias]
  gconf = config --global
  st = status
  co = checkout
  cm = commit -m
	dotfiles = !git --git-dir='/home/depassage/workspace/dotfiles' --work-tree='/home/depassage'
  mt = mergetool
[user]
  name = de-passage
  email = contact@sylvainleclercq.com

[merge]
	tool = vimdiff

[mergetool]
	keepBackup = false

[mergetool "vimdiff"]
	cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = true
